{
  "name": "career-portal",
  "version": "3.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "node dist/server",
    "serve": "ng serve --configuration=static",
    "build": "npm run build:ssr",
    "build:static": "ng build --prod --configuration=static --aot --build-optimizer",
    "jest": "jest",
    "test": "npm run jest",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "ng e2e",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:client-and-server-bundles": "ng build --prod --configuration=dynamic && ng run career-portal:server:dynamic"
  },
  "private": true,
  "engines": {
    "node": "10.3.0"
  },
  "dependencies": {
    "@angular/animations": "^8.2.13",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "^8.2.13",
    "@angular/compiler": "^8.2.13",
    "@angular/core": "^8.2.13",
    "@angular/forms": "^8.2.13",
    "@angular/http": "^7.2.15",
    "@angular/platform-browser": "^8.2.13",
    "@angular/platform-browser-dynamic": "^8.2.13",
    "@angular/platform-server": "^8.2.13",
    "@angular/router": "^8.2.13",
    "@bullhorn/bullhorn-icons": "2.7.0",
    "@bullhorn/bullhorn-types": "^1.10.0",
    "@bullhorn/dragula": "1.0.1",
    "@nguniversal/express-engine": "^8.1.1",
    "@nguniversal/module-map-ngfactory-loader": "8.1.1",
    "@types/jest": "^24.0.22",
    "ace-builds": "1.4.7",
    "angular2-text-mask": "^9.0.0",
    "angular2-universal": "^2.1.0-rc.1",
    "body-parser": "^1.19.0",
    "brace": "^0.11.1",
    "bullhorn-icons": "^1.17.0",
    "chomsky": "^3.5.0",
    "classlist.js": "^1.1.20150312",
    "core-js": "^3.4.0",
    "date-fns": "^2.7.0",
    "express": "^4.17.1",
    "he": "^1.2.0",
    "jest": "^24.9.0",
    "jest-preset-angular": "^8.0.0",
    "jsontoxml": "^1.0.1",
    "ngx-clipboard": "^12.2.1",
    "novo-elements": "3.14.0",
    "post-robot": "^10.0.29",
    "preboot": "^7.0.0",
    "roboto-fontface": "^0.10.0",
    "rxjs": "^6.5.3",
    "string-replace-webpack-plugin": "^0.1.3",
    "text-mask-addons": "^3.8.0",
    "xmlhttprequest": "^1.8.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.18",
    "@angular/cli": "^8.3.18",
    "@angular/compiler-cli": "^8.2.13",
    "@angular/language-service": "^8.2.13",
    "@types/node": "~12.12.6",
    "codelyzer": "^5.2.0",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "protractor": "~5.4.2",
    "ts-loader": "^6.2.1",
    "ts-node": "~8.4.1",
    "tslint": "^5.20.1",
    "typescript": "~3.4.0",
    "webpack-cli": "^3.3.10"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "<rootDir>/src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/src/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "setupFilesAfterEnv": ["<rootDir>/src/jest.ts"],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testURL": "http://localhost"
  },
  "lint-staged": {
    "*.{ts,json,scss,css,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
